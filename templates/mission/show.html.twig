{% extends 'baseBack.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdMission</th>
                <td>{{ mission.getIdMission() }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ mission.startDate ? mission.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ mission.endDate ? mission.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ mission.location }}</td>
            </tr>
            <tr>
                <th>Type_d</th>
                <td>{{ mission.typeD }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ mission.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_mission_index') }}">back to list</a>

    <a href="{{ path('app_mission_edit', {'id_mission': mission.getIdMission()}) }}">edit</a>

    {{ include('mission/_delete_form.html.twig') }}
{% endblock %}
