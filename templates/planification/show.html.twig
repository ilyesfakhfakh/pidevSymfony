{% block title %}Planification{% endblock %}

{% block body %}
    <h1>Planification</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id_plan</th>
                <td>{{ planification.idPlan }}</td>
            </tr>
            <tr>
                <th>Id_driver</th>
                <td>{{ planification.idDriver }}</td>
