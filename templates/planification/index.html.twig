<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get the "Select All" checkbox
        const selectAllCheckbox = document.getElementById('selectAll');

        // Get all individual checkboxes
        const checkboxes = document.querySelectorAll('.selectAll');

        // Add a click event listener to the "Select All" checkbox
        selectAllCheckbox.addEventListener('click', function() {
            // Loop through all checkboxes
            checkboxes.forEach(function(checkbox) {
                // Set each checkbox's checked property to be the same as the "Select All" checkbox
                checkbox.checked = selectAllCheckbox.checked;
            });
        });
    });
</script>


